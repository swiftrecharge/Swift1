<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/manage_meters"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ecg2"
    android:padding="5dp"
    tools:context="sixtus.com.homenavigation.ManageMeters">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@android:drawable/screen_background_dark_transparent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Manage Your Swift Meters"
        android:textSize="25sp"/>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/button_layout"
            android:textColor="@color/colorText"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_height="150dp"
            android:layout_width="0dip"
            android:text="Add A Meter"
            android:padding="5dp"
            android:id="@+id/add_meter"/>
        <Button android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/button_layout"
            android:textColor="@color/colorText"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_height="150dp"
            android:text="Delete Meter"
            android:padding="5dp"
            android:id="@+id/delete_meter"
            android:layout_width="0dip"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_layout"
            android:textColor="@color/colorText"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_height="150dp"
            android:text="View All Meters"
            android:id="@+id/registered_meters"
            android:layout_width="0dip"/>
        <Button android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_layout"
            android:textColor="@color/colorText"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_height="150dp"
            android:text="Request New Meter"
            android:id="@+id/request_meter"
            android:layout_width="0dip"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button android:layout_weight="1"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/button_layout"
            android:textColor="@color/colorText"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_height="150dp"
            android:text="Report Meter Malfunction"
            android:id="@+id/report_meter"
            android:layout_width="0dip"/>
        <Button android:layout_weight="1"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/button_layout"
            android:textColor="@color/colorText"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_height="150dp"
            android:text="View Meter Credit-Status"
            android:id="@+id/check_meter_credit"
            android:layout_width="0dip"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
</ScrollView>
